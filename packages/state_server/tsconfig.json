{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "webrtc_server/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "examples/dist/*",
    "webrtc_server/node_modules",
    "webrtc_server/dist"
  ]
}
